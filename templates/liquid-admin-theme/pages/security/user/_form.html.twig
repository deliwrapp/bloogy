<section class="col -col-12">
    <div class="panel -bg-white -b-rounded-md -shad-8 -w-f">
        <div class="-panel-header -text-center">
            <figure class="avatar avatar-xl -shad-12">
               <img src="#" alt="Avatar">
            </figure>
            <div class="-panel-title h5 mt-10 -t-u">EDIT user</div>
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="toast -warning -shad-12 -shad-10-h" role="alert">
                    <p>{{ flashError }}</p>
                    <button class="btn btn-clear"></button>
                </div>
            {% endfor %}
        </div>
        {{ form_start(form, {'attr': {'class': '-w-f'}}) }}
            <section class="-panel-body -flex -wrap">

                <div class="col -col-3 -md6 -sm12 -xs12">
                    {{ form_label(form.username, null, {
                        'label_attr': {'class': '-t-c -t-bld -color-dark'}
                    }) }}
                    <small>{{ form_help(form.username) }}</small>
                    {{ form_errors(form.username) }}
                    <div class="form-element has-icon-right">
                        {{ form_widget(form.username, {'attr': {'class': 'form-field -shad-12-h'}}) }}
                        <i class="form-icon fa-solid fa-user"></i>
                    </div>
                </div>
                
                <div class="col -col-3 -md6 -sm12 -xs12">
                    {{ form_label(form.email, null, {
                        'label_attr': {'class': '-t-c -t-bld -color-dark'}
                    }) }}
                    <small>{{ form_help(form.email) }}</small>
                    {{ form_errors(form.email) }}
                    <div class="form-element has-icon-right">
                        {{ form_widget(form.email, {'attr': {'class': 'form-field -shad-12-h', 'autocomplete': 'email'}}) }}
                        <i class="form-icon fa-solid fa-at"></i>
                    </div>
                </div>
                <div class="col -col-3 -md6 -sm12 -xs12">
                    {{ form_label(form.password, 'Password', {
                        'label_attr': {'class': '-t-c -t-bld -color-dark'}
                    }) }}
                    <small>{{ form_help(form.password) }}</small>
                    {{ form_errors(form.password) }}
                    <div class="form-element has-icon-right">
                        {{ form_widget(form.password, {'attr': {'class': 'form-field -shad-12-h'}}) }}
                        <i class="form-icon fa-solid fa-lock"></i>
                    </div>
                </div>
                
                <div class="col -col-2 -md6 -sm12 -xs12">
                    <small>{{ form_help(form.roles) }}</small>
                    {{ form_errors(form.roles) }}
                    <div class="form-element">
                        {{ form_label(form.roles, null, {
                            'label_attr': {'class': '-t-c -t-bld -color-dark'}
                        }) }}
                        <div class="-sm9">
                            {{ form_widget(form.roles, {'attr': {'class': 'form-select -shad-12'}}) }}
                        </div>
                    </div>
                </div>
                <div class="col -col-2 -md3 -sm12 -xs12">
                    <div class="form-element">
                        <label class="switch">
                            {{ form_widget(form.isVerified) }}
                            <i class="form-icon -shad-12"></i>
                            <span class="form-field-msg -t-c -t-bld -color-dark">Verified</span>
                        </label>
                    </div>
                    <small>{{ form_help(form.isVerified) }}</small>
                    {{ form_errors(form.isVerified) }}
                </div>
                <div class="col -col-2 -md3 -sm12 -xs12">
                    <div class="form-element">
                        <label class="switch">
                            {{ form_widget(form.isRestricted) }}
                            <i class="form-icon -shad-12"></i>
                            <span class="form-field-msg -t-c -t-bld -color-dark">Restricted</span>
                        </label>
                    </div>
                    <small>{{ form_help(form.isRestricted) }}</small>
                    {{ form_errors(form.isRestricted) }}
                </div>
            </section>
            <section class="-panel-footer -text-center ">
                <button  type="submit" class="-t-u -t-bld btn -primary -hover -block -shad-13 -shad-19-h -btn-bordered -b-rounded-xl">
                    {{ button_label|default('Save') }}
                </button>
            </section>
        {{ form_end(form) }}
    </div>
</section>