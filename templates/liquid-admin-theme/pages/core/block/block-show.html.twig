{% extends 'liquid-admin-theme/layout-admin.html.twig' %}

{% block title %}BLOCK SHOW{% endblock %}

{% block mainContent %}

    {% if blockContainer is defined %}
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR') %}
            <section class="-shad-12 col -col-12 -row -fixed -bottom -z100">
                <button class="tooltip -tooltip-top -light btn btn-action -xl s-circle -hover -shad-12 -shad-14-h" data-tooltip="edit block" type="submit">   
                    <a href="{{ path('admin_block_edit', { 'id': blockContainer.id }) }}">
                        <i class="fa-solid fa-pen fa-2x"></i>        
                    </a>
                </button>
            </section>
        {% endif %}
        <section class="-w-f">     
            {% include blockContainer.blockTemplate with {data:data} %}
        </section>
    {% else %}
        <p> There is no block !!! </p>
    {% endif %}

{% endblock %}