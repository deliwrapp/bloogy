{% extends 'liquid-admin-theme/layout-admin.html.twig' %}

{% block title %}TEMPLATES LIST{% endblock %}

{% block mainContent %}
<section class="col -col-12" id="template-list">
    {% if templates is defined and templates is not empty %}
        <div class="tile -tile-compact -w-f -shad-12">
            <div class="-tile-content">
                <div class="-tile-title -t-bld">
                    ADMIN TEMPLATE LIST
                </div>
                <div class="-tile-subtitle">
                    Create a new template
                </div>
            </div>
            <div class="-tile-action">
                <button class="btn -tertiary btn-link btn-block -btn-lg tooltip tooltip-left" data-tooltip="Create Template"> 
                    <a class="-tertiary" href="{{ path('admin_template_create') }}">
                        <i class="fa-solid fa-plus"></i> 
                    </a>
                </button>
            </div>
        </div>
        {% include 'liquid-ui/components/layout/table/table.html.twig' with {
                'tableHeadItems' : [
                    {
                        'text': 'id',
                        'attr': 'id'
                    },
                    {
                        'text': 'name',
                        'attr': 'name'
                    },
                    {
                        'text': 'path',
                        'attr': 'templatePath'
                    },
                    {
                        'text': 'published',
                        'attr': 'isPublished'
                    },
                ],
                'tableItems': templates,
                'actions' :  {
                    'show': {'path': 'admin_template_show', 'tooltip': 'show', 'icon': 'fa-regular fa-eye'},
                    'edit': {'path': 'admin_template_edit', 'tooltip': 'edit', 'icon': 'fa-regular fa-pen-to-square'},
                    'delete': {'path': 'admin_template_delete', 'token': 'delete-template', 'message': 'Are you sure you want to delete this Template ?'}
                }
            }
        %}   
    {% else %}
        <div class="tile -tile-compact -w-f -shad-12">
            <div class="-tile-content">
                <div class="-tile-title -t-bld">
                    There is no template !!!
                </div>
                <div class="-tile-subtitle">
                    You can create a new template
                </div>
            </div>
            <div class="-tile-action">
                <button class="btn -tertiary btn-link btn-block -btn-lg tooltip tooltip-left" data-tooltip="Create Template"> 
                    <a class="-tertiary" href="{{ path('admin_template_create') }}">
                        <i class="fa-solid fa-plus"></i> 
                    </a>
                </button>
            </div>
        </div>
    {% endif %}
</section>
{% endblock %}