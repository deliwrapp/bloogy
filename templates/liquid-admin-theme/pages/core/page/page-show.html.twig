{% extends 'liquid-admin-theme/layout-admin.html.twig' %}

{% block title %}ADMIN PAGE SHOW{% endblock %}

{% block mainContent %}

    {% if page is defined %}
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR') %}
            <section class="-shad-12 col -col-12 -row -fixed -bottom -z100">
                <button class="tooltip -tooltip-top -light btn btn-action -xl s-circle -hover -shad-12 -shad-14-h" data-tooltip="edit page" type="submit">   
                    <a href="{{ path('admin_page_edit', { 'id': page.id }) }}">
                        <i class="fa-solid fa-pen fa-2x"></i>        
                    </a>
                </button>
                <button class="tooltip -tooltip-top -dark btn btn-action -xl s-circle -hover -shad-12 -shad-14-h" data-tooltip="duplicate page" type="submit">   
                    <a href="{{ path('admin_page_duplicate', { 'id': page.id }) }}">
                        <i class="fa-solid fa-copy fa-2x -dark "></i>        
                    </a>
                </button>
            </section>
        {% endif %}
        {% if page.blocks is defined and page.blocks is not empty  %}
            <section class="-w-f"> 
                {% for pageBlock in page.blocks|sort((a, b) => a.position <=> b.position) %}  
                    {% if pageBlock.content is defined and pageBlock.content is not null %}
                        {{pageBlock.content|raw}}
                    {% endif %}
                    
                    {% if pageBlock.block is defined and pageBlock.block is not null %}
                        {% set data = pageBlock.block.data ? {data : pageBlock.block.data} : {} %}    
                        {% include pageBlock.block.blockTemplate with data %}
                    {% endif %}
                {% endfor %}
            </section>
        {% endif %}
    {% else %}
        <p> There is no page !!! </p>
    {% endif %}

{% endblock %}