{% extends 'liquid-admin-theme/layout-admin.html.twig' %}

{% block title %}PAGES LIST{% endblock %}

{% block mainContent %}
<section class="col -col-11" id="page-list">
    <div class="-text-center">
        <div class="h5 mt-10">ADMIN PAGE LIST</div>
    </div>
    
    {% if pages is defined and pages is not empty %}
        {% include 'liquid-ui/components/layout/table/table.html.twig' with {
                'tableHeadItems' : [
                    {
                        'text': 'id',
                        'attr': 'id'
                    },
                    {
                        'text': 'locale',
                        'attr': 'locale'
                    },
                    {
                        'text': 'name',
                        'attr': 'name'
                    },
                    {
                        'text': 'published',
                        'attr': 'isPublished'
                    },
                ],
                'tableItems': pages,
                'actions' :  {
                    'duplicate': {'path': 'admin_page_duplicate', 'tooltip': 'duplicate', 'icon': 'fas fa-copy'},
                    'show': {'path': 'admin_page_show', 'tooltip': 'show', 'icon': 'fa-regular fa-eye'},
                    'edit': {'path': 'admin_page_edit', 'tooltip': 'edit', 'icon': 'fa-regular fa-pen-to-square'},
                    'delete': {'path': 'admin_page_delete', 'token': 'delete-page', 'message': 'Are you sure you want to delete this Page ?'}
                }
            }
        %}   
    {% else %}
        <div class="tile -tile-compact -w-f -shad-12">
            <div class="-tile-content">
                <div class="-tile-title -t-bld">
                    There is no page !!!
                </div>
                <div class="-tile-subtitle">
                    You can create a new Page
                </div>
            </div>
            <div class="-tile-action">
                <button class="btn -tertiary btn-link btn-block -btn-lg tooltip tooltip-left" data-tooltip="Create Page"> 
                    <a class="-tertiary" href="{{ path('admin_page_create') }}">
                        <i class="fa-solid fa-plus"></i> 
                    </a>
                </button>
            </div>
        </div>
    {% endif %}
</section>
{% endblock %}