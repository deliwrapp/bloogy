{% extends 'liquid-admin-theme/layout-admin.html.twig' %}

{% block title %}ADMIN DATA FOLDER EDIT{% endblock %}

{% block mainContent %}
<section class="col -col-12">
    <a class="btn -block" href="{{ path('admin_data_manager') }}">back to Data Manager</a>
</section>
<section class="col -col-4 -md6 -sm12">
    <section class="col -col-6 -md6 -sm6 -xs6">
        <div class="panel -bg-white -b-rounded-md -shad-8 -w-f">
            <div class="-panel-header -text-center -flex -justify-space-evenly">
                {% if folder is defined and folder is not null and folder.folder is defined and folder.folder is not null %}
                    <a 
                        class="tooltip -tooltip-bottom -tertiary btn btn-action s-circle -primary -hover -shad-12 -shad-14-h"
                        data-tooltip="previous folder access"
                        href="{{ path('admin_folder_show', { 'id': folder.id }) }}"
                    >   
                        <i class="fas fa-folder fa-2x"></i>   
                    </a>
                {% endif %}
                {% if folder is defined and folder is not null %}
                    <a 
                        class="tooltip -tooltip-bottom -tertiary btn btn-action s-circle -light -hover -shad-12 -shad-14-h"
                        data-tooltip="show"
                        href="{{ path('admin_file_show', { 'id': file.id }) }}"
                    >   
                        <i class="fa-solid fa-eye fa-2x"></i>   
                    </a>
                    {{ include('liquid-admin-theme/pages/core/data/_file_delete_form.html.twig') }}
                {% endif %}
            </div>
            {% if folderNameForm is defined %}
                {{ include('liquid-admin-theme/pages/core/data/_file_edit_name_form.html.twig') }}
            {% endif %}
        </div>
    </section>
    <section class="col -col-6 -md6 -sm6 -xs6">
        <div class="panel -bg-white -b-rounded-md -shad-8 -w-f">
            {% if folderPrivateForm is defined %}
                {{ include('liquid-admin-theme/pages/core/data/_file_edit_private_form.html.twig') }}
            {% endif %}
        </div>
    </section>
    <section class="col -col-12">
        <div class="panel -bg-white -b-rounded-md -shad-8 -w-f">
            <div class="-panel-header -text-center -flex -justify-space-evenly">
            </div>
            {% if form is defined %}
                {{ include('liquid-admin-theme/pages/core/data/_folder_edit_form.html.twig') }}
            {% endif %}
        </div>
    </section>
</section>
<section class="col -col-8 -md6 -sm12  -xs12">
    {% if folder is defined and folder is not null %}
        {% if folder.subFolders is defined and folder.subfolders is not empty %}
            {% for subFolder in folder.subFolders %}
                <article class="col -col-2 -md2 -sm4 -xs6 -justify-center -items-center -wrap -shad-12" id="file-manager">
                    <div class="tile -tile-compact -w-f -m0">
                        <div class="-tile-content">
                            <p class="-m0 -t-i -t-tiny">
                                {{ subFolder.private ? 'private':'public' }}
                            </p>
                            <i class="fas fa-folder fa-2x -m2 -p4"></i>
                            <p class="-tile-title -m0 -t-bld -t-tiny">
                                {{ subFolder.name}}  
                            </p>
                            <p class="-m0 -t-i -t-tiny">
                                {{ subFolder.isPublished ? 'published':'not published' }}
                            </p>
                            <div class="-tile-subtitle">
                                <a class="-t-u btn -sm -light -hover" href="{{ path('admin_folder_show', {'id': folder.id}) }}">See</a>
                            </div>
                        </div>
                    </div>
                </article> 
            {% endfor %}
        {% endif %}
        <hr>
        {% if folder.files is defined and folder.files is not empty %}
            {% for file in folder.files %}
                <section class="col -col-2 -md4 -sm6 -xs6 -justify-center -items-center -wrap -shad-12 " id="file-{{file.id}}">
                    <p class="-m0 -t-i -t-tiny">
                        {{ file.private ? 'private':'public' }}
                    </p>
                    <div class="file-icon file-icon-xl -m2" data-type="{{file.ext}}"></div>
                    <p class="-m0 -t-bld -t-tiny">
                        {{ file.name ~ '.' ~ file.ext}}  
                    </p>                
                    <div class="-flex -justify-space-evenly -items-center -wrap -shad-12 -pr2 -pl2 -w-f">
                        {% include 'liquid-ui/components/ui/buttons/btn-action.html.twig' with {
                            'path': file.private ? path('serve_private_file', {'filename': file.originalFilename}) : asset(file.filePath),
                            'action': 'show',
                            'tooltip': 'see file',
                            'icon': 'fas fa-eye'
                        } %}
                        {% include 'liquid-ui/components/ui/buttons/btn-action.html.twig' with {
                            'path': file.private ? path('download_private_file', {'filename': file.originalFilename}) : asset(file.filePath),
                            'action': 'download',
                            'tooltip': 'download file',
                            'icon': 'fas fa-download'
                        } %}
                        {% include 'liquid-ui/components/ui/buttons/btn-action.html.twig' with {
                            'path': path('admin_file_edit', { 'id': file.id }),
                            'action': 'edit',
                            'tooltip': 'edit file',
                            'icon': 'fa-regular fa-pen-to-square'
                        } %}
                        {% include 'liquid-ui/components/ui/buttons/btn-delete.html.twig' with {
                            'path': path('admin_file_delete', { 'id': file.id }),
                            'message': 'Are you sure you want to delete this file ?',
                            'token': 'delete-file'
                        } %}
                    </div>
                </section>
            {% endfor %} 
        {% endif %}
    {% endif %}
</section>
{% endblock %}



