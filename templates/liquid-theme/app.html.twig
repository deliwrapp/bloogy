<!DOCTYPE html>
<html lang="{{ app.request.locale }}">

<head>
  {% block head %}
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% endblock %}
  {% block stylesheets %}
  {{ encore_entry_link_tags('liquid-css') }}
  {% endblock %}
    <link rel="stylesheet" href="../../main.css">
    <title>
      {% block title %}
        {% if title is defined %}
          {{title}}
        {% else %}
          {{ 'core.layout.app' | trans }}
        {% endif %}
      {% endblock %}
    </title>
</head>

<body {% block bodyClass %} class="{{app.request.get('_route')}}" {% endblock %}>
  {% block body %}
    <section class="liquid-app">
      <section id="top-page" class="liquid-page-container">
        <header {% block headerAttr %}  {% endblock %} >
          {% block header %}
            
          {% endblock %}
        </header>
        <main  {% block mainAttr %} class="{% if wrapperContent is defined %}-wrapper {% endif %} -top-4rm" {% endblock %}>
          {% block main %}
            {% block leftSide %} 
            
            {% endblock %}
            {% block rightSide %} {% endblock %}
            {% block modal %} {% endblock %}
            <section 
              {% block mainContentAttr %} class="{% if wrapperContent is defined %}main-content{% endif %}liquid-container liquid-grid -center -middle -z1 -overflow-x-hidden" {% endblock %}
            >
              {% block mainContent %}
              
              {% endblock %}  
            </section>
          {% endblock %}
        </main>
        <footer {% block footerAttr %}  {% endblock %}>
          {% block footer %}
            
          {% endblock %}
        </footer>
    {% endblock %}
      </section>
  </section>
  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('liquid-app') }}
  {% endblock %}
</body>

</html>